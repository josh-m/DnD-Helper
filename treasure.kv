#:kivy 1.9.1

<TreasureData>:
	name: 'treasure_data'
	cols: 1
	spacing: 1
	size_hint_y: None
	height: self.minimum_height
<TreasureScreen>:
	name: 'treasure'
	treasure_type: treasure_type_text
	treasure_data: treasure_data_view
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			size_hint_y: 0.2
			Label:
				text: 'Treasure Type/s: '
				size_hint_x:0.7
			AlphaInput:
				id: treasure_type_text
			Button:
				size_hint_x:0.7
				text:'    Roll\nTreasure'
				on_press: root.requestRoll()
			Button:
				size_hint_x:0.2
				text: 'Menu'
				on_press: root.manager.current = 'menu'
		ScrollView:
			TreasureData:
				id: treasure_data_view
